#!/bin/bash

#find real script directory
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
#make a soft links of yours dotfile
echo
echo creating symbolic links from $DIR to system dotfiles in ~/


ln --symbolic --interactive $DIR/.gitconfig  ~/.gitconfig
ln --symbolic --interactive $DIR/.vimrc  ~/.vimrc

